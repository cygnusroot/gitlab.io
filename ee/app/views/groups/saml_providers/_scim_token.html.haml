- scim_token_present = false # Placeholder until BE is ready
.prepend-top-default.js-generate-scim-token-container{ class: "#{ 'd-none' if scim_token_present}" }
  %p= _('Generate a SCIM token to set up your Syetem for Cross-Domain Identity Management.')
  %button.btn.btn_default.btn-white.js-generate-scim-token{ type: 'button' }
    = _('Generate a SCIM token')
.prepend-top-default.js-scim-token-container{ class: "#{ 'd-none' unless scim_token_present}" }
  .well-segment.borderless.mb-3.w-75
    = render 'scim_row', value: '********************', field: 'scim_token', label_text: _('Your SCIM token'), show_clipboard: false
    .form-text.text-muted
      %span
        = _('The SCIM token is now hidden. To see the value of the token again, you need to ')
        %button.btn.btn-default.btn-link.d-inline.align-baseline.js-reset-scim-token{ type: 'button' }
          = _('reset it.')
      %span.d-none
        = _('Make sure you save it - you won\'t be able to access it again.')
  .well-segment.borderless.w-75
    = render 'scim_row', value: @scim_token_url, field: 'scim_endpoint_url', label_text: _('SCIM API endpoint URL'), show_clipboard: true
.prepend-top-default.text-center.js-scim-loading-container.d-none
  .spinner
