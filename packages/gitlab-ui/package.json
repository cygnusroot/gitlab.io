{
  "name": "@gitlab-org/gitlab-ui",
  "version": "1.0.0",
  "description": "GitLab UI Components",
  "main": "index.js",
  "repository": "git@gitlab.com:gitlab-org/gitlab-ui.git",
  "author": "GitLab",
  "private": false,
  "scripts": {
    "download-application-css": "sh .storybook/utils/download-application-css.sh",
    "storybook": "yarn run download-application-css && start-storybook -p 9001 -c .storybook -s ./styles",
    "storybook-static": "yarn run download-application-css && build-storybook -c .storybook -o storybook -s ./styles",
    "test": "yarn run storybook-static && jest"
  },
  "dependencies": {
    "@gitlab-org/gitlab-svgs": "^1.23.0",
    "bootstrap-vue": "^2.0.0-rc.11",
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "@storybook/addon-storyshots": "^4.0.0-alpha.11",
    "@storybook/addon-storyshots-puppeteer": "^4.0.0-alpha.11",
    "@storybook/vue": "^3.4.8",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.2.0",
    "babel-preset-env": "^1.7.0",
    "jest": "^23.2.0",
    "jest-serializer-vue": "^2.0.2",
    "puppeteer": "^1.5.0",
    "rollup": "^0.63.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-vue": "^4.3.1",
    "vue-jest": "^2.6.0",
    "vue-loader": "^14",
    "vue-template-compiler": "^2.5.16"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/components/$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules(?![\\\\/]bootstrap-vue[\\\\/]|(/@storybook/.*\\.vue$))/"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      }
    }
  }
}
